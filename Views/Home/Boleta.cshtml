@model BoletaModel
<!-- Views/Home/Boleta.cshtml -->
<h2>Generar Boleta</h2>

<form asp-action="Boleta" method="post">
    <input type="hidden" asp-for="MonedaOrigen" />
    <input type="hidden" asp-for="MonedaDestino" />
    <input type="hidden" asp-for="Cantidad" />
    <input type="hidden" asp-for="Resultado" />
    
    <div class="form-group">
        <label>Nombre:</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    
    <div class="form-group">
        <label>Apellido:</label>
        <input asp-for="Apellido" class="form-control" />
    </div>
    
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>
    
    <div class="form-group">
        <label>DNI:</label>
        <input asp-for="DNI" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary">Generar Boleta</button>
</form>