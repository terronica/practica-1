@model CambioModel
<!-- Views/Home/Cambio.cshtml -->
<h2>Realizar Cambio de Moneda</h2>

<form asp-action="Cambio" method="post">
    <div class="form-group">
        <label>Envías:</label>
        <select asp-for="MonedaOrigen" class="form-control">
            <option value="BRL">Real Brasileño (BRL)</option>
            <option value="PEN">Sol Peruano (PEN)</option>
        </select>
    </div>
    
    <div class="form-group">
        <label>Recibes:</label>
        <select asp-for="MonedaDestino" class="form-control">
            <option value="PEN">Sol Peruano (PEN)</option>
            <option value="BRL">Real Brasileño (BRL)</option>
        </select>
    </div>
    
    <div class="form-group">
        <label>Cantidad:</label>
        <input asp-for="Cantidad" class="form-control" type="number" step="0.01" min="0" />
    </div>
    
    <button type="submit" class="btn btn-primary">Hacer Cambio</button>
</form>